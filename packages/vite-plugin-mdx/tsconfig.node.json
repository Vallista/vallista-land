{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // 동적 import, import.meta 허용
    "moduleResolution": "bundler", // 타입 탐색 오류 해결
    "allowSyntheticDefaultImports": true, // chalk 등 default import 대응
    "esModuleInterop": true, // CJS -> ESM 변환 허용
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
