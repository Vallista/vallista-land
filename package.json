{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "~5.6.2"
  },
  "scripts": {
    "watch:core": "pnpm --filter @vallista/core run watch",
    "build:core": "pnpm --filter @vallista/core run build",
    "publish:core": "pnpm --filter @vallista/core run publish",
    "watch:ds": "pnpm --filter @vallista/design-system run watch",
    "build:ds": "pnpm --filter @vallista/design-system run build",
    "publish:ds": "pnpm --filter @vallista/design-system run publish",
    "watch:playground": "pnpm --filter @vallista/playground run watch",
    "build:playground": "pnpm --filter @vallista/playground run build",
    "clean:playground": "cd services/playground && gatsby clean",
    "watch:blog": "pnpm --filter @vallista/blog run watch",
    "build:blog": "pnpm --filter @vallista/blog run build",
    "clean:blog": "pnpm --filter @vallista/blog run clean",
    "post:blog": "pnpm --filter @vallista/blog run post",
    "deploy:blog": "pnpm --filter @vallista/blog run deploy",
    "directory:blog": "cd services/blog",
    "deploy:blog-ex": "pnpm --filter @vallista/blog run deploy",
    "watch:blog2": "pnpm --filter new-blog run watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --verbose"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
