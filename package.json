{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "run:core": "lerna run run:core --stream",
    "build:core": "lerna run build:core",
    "run:playground": "lerna run run:playground --stream",
    "build:playground": "lerna run build:playground",
    "clean:playground": "cd packages/playground && gatsby clean",
    "run:blog": "lerna run run:blog --stream",
    "build:blog": "lerna run build:blog",
    "clean:blog": "cd packages/vallista-blog && gatsby clean",
    "post:blog": "lerna run post:blog",
    "deploy:blog": "lerna run deploy:blog"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --verbose"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}